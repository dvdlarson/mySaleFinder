{{!-- Form --}}
<form class="ui form">
  <h4 class="ui dividing header teal">Seller Information</h4>
  {{!-- first row --}} 
  {{!-- username --}}
    <div class="field five wide">
      <label>Username</label>
      <div class="field">
        <input type="text" placeholder="Username" id="username" required>
      </div>
    </div>
  {{!-- second row --}}
    {{!-- password --}}
    <div class="two fields">
      <div class="field">
        <label>Password</label>
        <div class="field">
          <input type="password" placeholder="Password" id="password" required>
        </div>
      </div>
      {{!-- verify password --}}
      <div class="field">
        <label>Verify Password</label>
        <div class="field">
          <input type="password" placeholder="" id="verifyPassword">
        </div>
      </div>      
    </div>


  {{!-- second row --}} 
  {{!-- first name --}}
  <div class="two fields">
    <div class="field">
      <label>First Name</label>
      <div class="field">
        <input type="text" placeholder="First Name" id="firstName" required>
      </div>
    </div>
    {{!-- last name --}}
    <div class="field">
      <label>Last Name</label>
      <div class="field">
        <input type="text" placeholder="Last Name" id="lastName" required>
      </div>
    </div>
  </div>
  {{!-- third row --}} 
  {{!-- email --}}
  <div class="two fields">
    <div class="field">
      <label>Email</label>
      <div class="field">
        <input type="email" placeholder="Email" required id="email">
      </div>
    </div>
    {{!-- phone --}}
    <div class="field">
      <label>Phone</label>
      <div class="field">
        <input type="text" placeholder="#" id="phone" name="phone">
      </div>
    </div>
  </div>
  {{!-- fourth row --}}
  <h4 class="ui dividing header teal">Address</h4>
  <div class="one field">
    <label>Street</label>
    <div class="field">
      <input type="text" placeholder="Street" id="street" required>
    </div>
  </div>
  {{!-- fifth row --}} {{!-- city --}}
  <div class="three fields">
    <div class="field">
      <label>City</label>
      <div class="field">
        <input type="text" placeholder="City" id="city" required>
      </div>
    </div>
    {{!-- state --}}
    <div class="field">
      <label>State</label>
      <select class="ui fluid dropdown" id="state" required>
